<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
    <div style='display: flex; justify-content: flex-end'>
      <form method="POST" action='/logout'>
        <div>Logged In As: <%= user.email %>!
        <button type="submit" style="background-color: #28a745; color: black; padding: 0.5em 1em 0.5em 1em; border-radius: 5px; border-color: black; border-width: 1px; margin-left: 10px">Logout</button>
        </div>
    </form>
    <% } else { %>
      <form method="POST" action="/login">
        <input type="text" name="username" placeholder="Username" style="border-radius: 5px; height: 2.5em; width: 13em; margin-right: 5px; border-color: white; padding-left: 10px">
        <button type="submit" style="background-color: #28a745; color: black; padding: 0.5em 1em 0.5em 1em; border-radius: 5px; border-color: black; border-width: 1px;">Login</button>
      </form>
      </div>
      <% } %>
  </nav>
</header>